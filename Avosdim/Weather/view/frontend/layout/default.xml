    <head>
        <css src="Avosdim_Weather::css/mycss.css" />
    </head>

    <body>
        <referenceContainer name="header.panel">
            <block class="Magento\Framework\View\Element\Template" name="weather" template="Avosdim_Weather::weather.phtml">
